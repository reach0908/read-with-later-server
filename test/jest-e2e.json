{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": "..",
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"setupFilesAfterEnv": ["<rootDir>/test/helpers/test.helper.ts"],
	"moduleNameMapper": {
		"^src/(.*)$": "<rootDir>/src/$1",
		"^test/(.*)$": "<rootDir>/test/$1"
	}
}
